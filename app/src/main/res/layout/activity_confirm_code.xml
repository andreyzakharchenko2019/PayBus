<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".confirm_code">

    <View
        android:id="@+id/back"
        android:layout_width="412dp"
        android:layout_height="869dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-24dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.263" />

    <View
        android:id="@+id/top"
        android:layout_width="412dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="0dp"
        android:background="#FFFFFF"
        android:foregroundGravity="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/some_id"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/top"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal|top"
        android:text="@string/some_id"
        android:textAppearance="@style/some_id"
        app:layout_constraintBottom_toBottomOf="@+id/top"
        app:layout_constraintEnd_toEndOf="@+id/top"
        app:layout_constraintStart_toStartOf="@+id/top"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sms_"
        android:layout_width="359dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="99dp"
        android:gravity="top"
        android:text="@string/sms_"
        android:textAppearance="@style/sms_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/back"
        app:layout_constraintTop_toBottomOf="@+id/top" />

    <ImageButton
        android:id="@+id/imageButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/top"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="343dp"
        android:layout_marginBottom="7dp"
        android:background="#FFFFFF"
        android:contentDescription="TODO"
        android:gravity="top"
        app:srcCompat="@drawable/ic_backarrow_new"
        tools:ignore="TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-2dp" />

    <com.chaos.view.PinView
        android:id="@+id/firstPinView"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="388dp"
        android:cursorVisible="true"
        android:hint=""
        android:inputType="number"
        android:itemBackground="@color/white"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cursorColor="@color/purple_200"
        app:cursorWidth="2dp"
        app:hideLineWhenFilled="false"
        app:itemCount="4"
        app:itemHeight="70dp"
        app:itemRadius="10dp"
        app:itemSpacing="15dp"
        app:itemWidth="46dp"
        app:lineColor="@color/white"
        app:lineWidth="0dp"
        app:viewType="rectangle"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="222dp" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="#616161"
        android:textSize="12sp"
        android:textStyle=""
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="310dp"
        tools:text="00:00" />


</RelativeLayout>